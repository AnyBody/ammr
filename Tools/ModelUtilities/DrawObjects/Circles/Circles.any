  {
    Visible = On;
    Min = 0;
    Max = ..rm;
    AutoMin = On;
    AutoMax = On;
    Title = 
    {
      Visible = On;
      Font = 
      {
        RGB = {0, 0, 0};
        FontName = "Times New Roman";
        Height = 20;
        Width = 8;
        Bold = On;
        Italic = Off;
      };
      Text = "x";
    };
    Unit1 = 
    {
      Visible = On;
      AutoUnit = On;
      
      Divisions = 5;
      Unit = ...rm/5;
      TickInside = 0;
      TickOutside = 0;
      GridLines = Off;
      GridLineStyle = 
      {
        Style = Line3DStyleFull;
        Thickness = 1;
        RGB = {0.25, 0.25, 0.25};
      };
      Text = On;
      TextFont = 
      {
        RGB = {0, 0, 0};
        FontName = "Times New Roman";
        Height = 20;
        Width = 8;
        Bold = Off;
        Italic = Off;
      };
      TextSpace = 0;
      NumberFormat = 
      {
        Digits = 2;
        Style = 0;
        Scale = Off;
        ScaleVal = 1;
      };
    };
  };
  ValueAxis = 
  {
    Visible = On;
    Min = 0;
    Max = ..rm;
    AutoMin = On;
    AutoMax = On;
    Title = 
    {
      Visible = On;
      Font = 
      {
        RGB = {0, 0, 0};
        FontName = "Times New Roman";
        Height = 20;
        Width = 8;
        Bold = On;
        Italic = Off;
      };
      Text = "z";
    };
    Unit1 = 
    {
      Visible = On;
      AutoUnit = On;
      Divisions = 5;
      Unit = ...rm/5;
      TickInside = 0;
      TickOutside = 0;
      GridLines = Off;
      GridLineStyle = 
      {
        Style = Line3DStyleFull;
        Thickness = 1;
        RGB = {0.25, 0.25, 0.25};
      };
      Text = On;
      TextFont = 
      {
        RGB = {0, 0, 0};
        FontName = "Times New Roman";
        Height = 20;
        Width =8;
        Bold = Off;
        Italic = Off;
      };
      TextSpace = 0;
      NumberFormat = 
      {
        Digits = 2;
        Style = 1;
        Scale = Off;
        ScaleVal = 1;
      };
    };
  };
  //AnyChartSerie &<Insert name0> = <Insert object reference (or full object definition)>; You can make any number of these objects!
};


