//Draw Axes
AnyChart drwchart = 
{ 
  Style = 
  {
    Style = CartesianChart3D;
    Sizes = {..rm,..rm,..rm};
    Axes = 
    {
      Style = Line3DStyleFull;
      Thickness = 1;
      RGB = {0.25, 0.25, 0.25};
    };
    Title = 
    {
      Visible = On;
      Font = 
      {
        RGB = {0, 0, 0};
        FontName = "Times New Roman";
        Height = 0;
        Width = 0;
        Bold = Off;
        Italic = Off;
      };
      Text = "y";
    };
    MessageFont = 
    {
      RGB = {0, 0, 0};
      FontName = "Times New Roman";
      Height = 1;
      Width = 1;
      Bold = Off;
      Italic = Off;
    };
  };
  /*Legend = 
  {
  Visible = Off;
  };*/
