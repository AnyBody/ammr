  };  
  
  
  
  
  AnyKinEqSimpleDriver MalleolusRDrv  = {
    AnyKinLinear MalleolusR ={
      Ref=0;
      
      AnyRefFrame &ref1=Main.Model.HumanModel.Right.Leg.Seg.Shank.MalleolusMarker;
      AnyRefFrame &ref2=Main.Model.Markers.p3.Seg;
