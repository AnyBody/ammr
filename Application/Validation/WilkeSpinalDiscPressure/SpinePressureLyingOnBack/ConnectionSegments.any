  FootLeft = {
    AnyRefNode FootFootRestJntNode = {
      sRel = .HeelContactNode.sRel;
    };
  };
  
  FootRest = {
    AnyRefNode FootRestFootJntNodeRight = {
      sRel = {0,0.11,0.096};
