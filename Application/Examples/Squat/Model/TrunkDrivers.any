AnyKinEqSimpleDriver NeckExtensionDriver = 
{
  AnyKinRotational rot = 
  {
    AnyRefFrame& ref = ....BodyModel.Trunk.SegmentsCervicalSpine.SkullSeg.TopOfHead;
    Type = RotAxesAngles;
    Axis1 = z;
    Axis2 = y;
    Axis3 = x;
  };
  MeasureOrganizer = {0};
  DriverPos = pi/180*{-15};
  DriverVel = pi/180*{0.0};    
  Reaction.Type = {Off};
};

