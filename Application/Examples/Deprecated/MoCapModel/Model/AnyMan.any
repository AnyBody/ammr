// File of anthropometric data
// In this file you have to enter the legnth of each segment individualy

AnyVar BMI = BodyMass/(BodyHeight^2);
///Estimation from Frankenfield et al. (2001) valid for men
AnyVar FatPercent = (-0.09 + 0.0149*BMI - 0.00009*BMI^2)*100;

AnyVar BodyMass = 75 ;
AnyVar BodyHeight = 180 /100;


AnyFolder SegmentMasses = {
 
  //Segment masses in kg from Winter ("Biomechanics and motor control of human movement." David A. Winter)
  AnyVar Lumbar = 0.139*.BodyMass; // T12-L1 to L5-Sacrum
  AnyVar Thorax = 0.1894*.BodyMass; // C7-T1 to T12-L1 (modified from 0.216 winter to separate scapula)
  AnyVar Pelvis = 0.142*.BodyMass;
  AnyVar Head = 0.081*.BodyMass; // head and cervical
  
  AnyFolder Right = 
  {
      AnyVar Clavicle = 0.0133*..BodyMass;
      AnyVar UpperArm = 0.028*..BodyMass;
      AnyVar LowerArm = 0.016*..BodyMass;
      AnyVar Hand = 0.006*..BodyMass;
      AnyVar Thigh = 0.1*..BodyMass;
      AnyVar Shank = 0.0465*..BodyMass;
      AnyVar Talus = 0.2*0.0145*..BodyMass; //20% of total foot (from bone volume ratio)
      AnyVar Foot =  0.8*0.0145*..BodyMass; //80% of total foot (from bone volume ratio)
  };
  
  AnyFolder Left = 
  {
      AnyVar Clavicle = 0.0133*..BodyMass;
      AnyVar UpperArm = 0.028*..BodyMass;
      AnyVar LowerArm = 0.016*..BodyMass;
      AnyVar Hand = 0.006*..BodyMass;
      AnyVar Thigh = 0.1*..BodyMass;
      AnyVar Shank = 0.0465*..BodyMass;
      AnyVar Talus = 0.2*0.0145*..BodyMass; //20% of total foot (from bone volume ratio)
      AnyVar Foot =  0.8*0.0145*..BodyMass; //80% of total foot (from bone volume ratio)
  };   
  
};


AnyFolder SegmentDimensions = {
  AnyVar PelvisWidth = Main.TrialSpecificData.Anthropometrics.PelvisWidth; //distance between hip joints (0.16 for simple leg model)
  AnyVar HeadHeight = Main.TrialSpecificData.Anthropometrics.HeadHeight;//height in neutral position from  C1HatNode to top of head
  AnyVar TrunkHeight = Main.TrialSpecificData.Anthropometrics.TrunkHeight;//height in neautral position from  C1HatNode to L5SacrumJnt
  
  
 // These two folders are used by the scaling laws
  AnyFolder Right = 
  {
    AnyVar UpperArmLength = Main.TrialSpecificData.Anthropometrics.UpperArmLength;
    AnyVar LowerArmLength = Main.TrialSpecificData.Anthropometrics.LowerArmLength;
    AnyVar HandLength = Main.TrialSpecificData.Anthropometrics.HandLength;
    AnyVar HandBreadth = Main.TrialSpecificData.Anthropometrics.HandBreadth;  

    AnyVar ThighLength = Main.TrialSpecificData.Anthropometrics.ThighLength ;
    AnyVar ShankLength = Main.TrialSpecificData.Anthropometrics.ShankLength ;
    AnyVar FootLength = Main.TrialSpecificData.Anthropometrics.FootLength;
    AnyVar TalusLength = 0.133*FootLength;
  };
  
  AnyFolder Left = 
  {
    AnyVar UpperArmLength = .Right.UpperArmLength;
    AnyVar LowerArmLength = .Right.LowerArmLength;
    AnyVar HandLength = .Right.HandLength;
    AnyVar HandBreadth = .Right.HandBreadth;

    AnyVar ThighLength = .Right.ThighLength;
    AnyVar ShankLength = .Right.ShankLength;
    AnyVar FootLength = .Right.FootLength;
    AnyVar TalusLength = .Right.TalusLength;
  };
  
};

