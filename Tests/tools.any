  {\
    AnyOperationSetValue SetTestTrigger = \
    {\
      AnyInt dummyOne = 1;\
      Source = {&dummyOne};\
      Target = {&TRIGGER};\
    };  \
  };\
  \
}


#class_template FixTestStudyConfig(
  KINEMATIC_TOL = 1e-8,
  DISABLE_UPPERBOUND = 1,
){ 
  
  AnyFolder& Study = #parent;
  #if KINEMATIC_TOL
  Study.Kinematics.KinematicTol = KINEMATIC_TOL;
  #endif
     
  #if DISABLE_UPPERBOUND
   Study.InverseDynamics.Criterion.UpperBoundOnOff = Off;
  #endif
